<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head.ejs') %> <%- include('./partials/navbar.ejs') %>
  <div class="max-w-7xl mx-auto p-6">
    <h2 class="text-2xl font-bold text-gray-700 mb-4">Carrito de compras</h2>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
      <!-- Sección de productos -->
      <div class="bg-white shadow-lg rounded-lg p-6">
        <h3 class="text-lg font-semibold mb-4">Tus productos</h3>

        <!-- Producto 1 -->
        <div class="flex items-center justify-between p-4 border-b">
          <div class="flex items-center space-x-4">
            <img
              src="/images/producto1.jpg"
              alt="Producto 1"
              class="w-16 h-16 object-cover rounded-md"
            />
            <div>
              <h4 class="font-semibold">Producto 1</h4>
              <span class="text-gray-600">$29.99</span>
            </div>
          </div>
          <div class="flex items-center space-x-4">
            <button class="text-gray-600"><i class="fas fa-minus"></i></button>
            <span class="text-lg font-semibold">1</span>
            <button class="text-gray-600"><i class="fas fa-plus"></i></button>
            <button class="text-red-500"><i class="fas fa-trash"></i></button>
          </div>
        </div>

        <!-- Producto 2 -->
        <div class="flex items-center justify-between p-4 border-b">
          <div class="flex items-center space-x-4">
            <img
              src="/images/producto2.jpg"
              alt="Producto 2"
              class="w-16 h-16 object-cover rounded-md"
            />
            <div>
              <h4 class="font-semibold">Producto 2</h4>
              <span class="text-gray-600">$39.99</span>
            </div>
          </div>
          <div class="flex items-center space-x-4">
            <button class="text-gray-600"><i class="fas fa-minus"></i></button>
            <span class="text-lg font-semibold">2</span>
            <button class="text-gray-600"><i class="fas fa-plus"></i></button>
            <button class="text-red-500"><i class="fas fa-trash"></i></button>
          </div>
        </div>

        <div class="mt-4 flex justify-between">
          <button class="text-red-500 hover:underline">Borrar todo</button>
          <span class="text-lg font-bold">Total: $69.98</span>
        </div>
      </div>

      <!-- Sección de envío y pago -->
      <div class="bg-white shadow-lg rounded-lg p-6">
        <h3 class="text-lg font-semibold mb-4">Envío y pago</h3>

        <div class="border p-4 rounded-md mb-4">
          <p class="text-gray-600">No hay ubicación de envío</p>
          <button class="text-[#d2a679] hover:underline">
            Agregar ubicación
          </button>
        </div>

        <h4 class="font-semibold mb-2">Tus tarjetas</h4>
        <div class="border p-4 rounded-md space-y-2">
          <label class="flex items-center space-x-3 cursor-pointer">
            <input type="radio" name="card" class="accent-[#d2a679]" />
            <span class="font-semibold">Banco X - **** 1234</span>
          </label>
          <label class="flex items-center space-x-3 cursor-pointer">
            <input type="radio" name="card" class="accent-[#d2a679]" />
            <span class="font-semibold">Banco Y - **** 5678</span>
          </label>
        </div>

        <button
          class="w-full mt-6 bg-[#d2a679] text-white py-2 rounded-md hover:bg-[#b2825e] transition duration-300"
        >
          Enviar
        </button>
      </div>
    </div>
  </div>
  <%- include('./partials/footer.ejs') %>
</html>
