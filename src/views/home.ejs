      <!-- Botones de navegación -->
      <button
        class="absolute left-2 top-1/2 transform -translate-y-1/2 bg-[#d2a679] text-white px-4 py-2 rounded-md"
        onclick="prevSlide()"
      >
        &#10094;
      </button>
      <button
        class="absolute right-2 top-1/2 transform -translate-y-1/2 bg-[#d2a679] text-white px-4 py-2 rounded-md"
        onclick="nextSlide()"
      >
        &#10095;
      </button>
    </div>
    <script>
      const images = [
        "/images/imagen1.jpg",
        "/images/imagen2.jpg",
        "/images/imagen3.jpg",
      ];
      let index = 0;
      function updateCarousel() {
        document.getElementById("carouselImage").src = images[index];
      }
      function nextSlide() {
        index = (index + 1) % images.length;
        updateCarousel();
      }
      function prevSlide() {
        index = (index - 1 + images.length) % images.length;
        updateCarousel();
      }
    </script>
