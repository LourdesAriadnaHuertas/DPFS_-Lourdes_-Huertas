<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head.ejs') %> <%- include('./partials/navbar.ejs') %>
  <div class="max-w-md mx-auto bg-white p-6 rounded-lg shadow-md mt-10">
    <h2 class="text-2xl font-semibold text-center mb-4">Registrarse</h2>
    <form action="/register" method="POST" class="space-y-4">
      <input
        type="text"
        name="usuario"
        placeholder="Nombre de usuario"
        class="w-full p-2 border rounded-md"
      />
      <input
        type="email"
        name="email"
        placeholder="Correo electrónico"
        class="w-full p-2 border rounded-md"
      />
      <input
        type="password"
        name="password"
        placeholder="Contraseña"
        class="w-full p-2 border rounded-md"
      />
      <input
        type="password"
        name="confirmPassword"
        placeholder="Confirmar contraseña"
        class="w-full p-2 border rounded-md"
      />

      <button
        type="submit"
        class="w-full bg-[#d2a679] text-white py-2 rounded-md hover:bg-[#b2825e] transition duration-300"
      >
        Registrarse
      </button>
    </form>
    <p class="text-sm text-center mt-4">
      ¿Ya tienes cuenta?
      <a href="./login" class="text-[#d2a679] font-semibold">Inicia sesión</a>
    </p>
  </div>

  <%- include('./partials/footer.ejs') %>
</html>
