<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head.ejs') %> <%- include('./partials/navbar') %>
  <div class="max-w-4xl mx-auto bg-white p-6 rounded-lg shadow-lg">
    <div class="flex">
      <!-- Imagen del producto -->
      <div class="w-1/2">
        <img
          src="/images/producto.jpg"
          alt="Producto"
          class="w-full h-auto rounded-lg"
        />
      </div>

      <!-- Información del producto -->
      <div class="w-1/2 pl-6">
        <h1 class="text-2xl font-bold mb-4">Nombre del Producto</h1>
        <p class="text-gray-600 mb-2">Descripción breve del producto.</p>
        <p class="text-gray-600 mb-4">Más detalles importantes.</p>

        <!-- Botón de agregar al carrito -->
        <button
          class="bg-[#d2a679] text-white px-4 py-2 rounded-md hover:bg-[#b2825e] transition duration-300"
        >
          <i class="fas fa-cart-plus"></i> Agregar al carrito
        </button>
      </div>
    </div>

    <!-- Información adicional -->
    <div class="mt-6 bg-gray-100 p-4 rounded">
      <h2 class="text-xl font-bold mb-4">Información adicional</h2>
      <p class="text-gray-600 mb-2">Detalles adicionales del producto.</p>
      <p class="text-gray-600 mb-2">Más información relevante.</p>
      <p class="text-gray-600">Otra información importante.</p>
    </div>
  </div>
  <%- include('./partials/footer.ejs') %>
</html>
